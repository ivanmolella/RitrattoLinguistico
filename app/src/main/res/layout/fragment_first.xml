<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimary"
    android:orientation="vertical"
    tools:context=".FirstFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/bg_gradient"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/tmp_img_mappamondo">

        </ImageView>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.3"
        android:background="?attr/colorSecondary"
        android:orientation="vertical">


        <Button
            android:id="@+id/scopriDiPiuBtn"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_margin="25dp"
            android:backgroundTint="#FFFFFF"
            android:drawableLeft="@drawable/tmp_img_scopri_di_piu"
            android:text="@string/scopridipiÃ¹button"
            android:textColor="@color/black"
            android:textSize="14sp"></Button>

        <Button
            android:id="@+id/ritrattoLinguisticoBtn"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_margin="25dp"
            android:backgroundTint="#FFFFFF"
            android:text="@string/ritrattolinguisticobutton"
            android:textColor="@color/black"
            android:textSize="14sp">

        </Button>

        <Button
            android:id="@+id/GiardinoLinguisticoBtn"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_margin="25dp"
            android:backgroundTint="#FFFFFF"
            android:text="@string/giardinolinguisticobutton"
            android:textColor="@color/black"
            android:textSize="14sp">

        </Button>


        <Button
            android:id="@+id/SistemidiScritturaBtn"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_margin="25dp"
            android:backgroundTint="#FFFFFF"
            android:text="@string/sistemiscritturabutton"
            android:textColor="@color/black"
            android:textSize="14sp">

        </Button>

    </LinearLayout>

</LinearLayout>

